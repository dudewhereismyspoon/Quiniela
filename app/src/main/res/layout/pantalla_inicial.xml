<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicio"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PantallaInicial">

    <Button
        android:id="@+id/botonAnalisisAvanzado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:text="@string/botonAnalisisAvanzado"
        android:background="#32000000"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_below="@+id/textView43"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43"/>

    <Button
        android:id="@+id/botonAnalisisSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonAnalisisSimple"
        android:background="#6e000000"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="98dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analizador de quinielas"
        android:id="@+id/textView43"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#58000000"/>

</RelativeLayout>
